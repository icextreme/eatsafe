<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/crit_vio_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hazard_spinner"
        android:layout_alignStart="@id/hazard_spinner"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/empty_string"
        android:inputType="number" />

    <TextView
        android:id="@+id/crit_violations_tv"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:layout_below="@+id/hazard_spinner"
        android:layout_alignStart="@id/hazard_lv_tv"
        android:layout_alignParentStart="false"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/crit_vio_desc" />

    <Spinner
        android:id="@+id/hazard_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/hazard_lv_tv" />

    <TextView
        android:id="@+id/hazard_lv_tv"
        android:layout_width="147dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/hazard_desc"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crit_violations_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout>